<div id="wrapper">
<div id="header">
  <h1>Welcome to the SoIaF RPG Character Manager</h1>
<!-- User is logged in successfully -->
</div> <!-- header -->
<% if logged_in? %>

  <!-- Insert conditional regarding Admin rights -->
  <!-- Expected options to display ALL characters and -->
  <!-- ALL houses in the database -->

Welcome, <%= current_user.name %>!
  <% if current_user.characters.empty? %>
    <p>You have no created characters</p>
  <% else %>
    <h3>These are your created characters</h3>
      <ul>
        <% current_user.characters.each do |character| %>
          <li><%= character.name %> of House <%= character.house.name %></li>
        <% end %>
      </ul>
  <% end %>

  <% if current_user.houses.empty? %>
    <p>You have no created houses</p>
  <% else %>
    <h3>These are your created houses</h3>
      <ul>
        <% current_user.houses.each do |house| %>
          <li><%= house.name %> in <%= house.region.name %></li>
        <% end %>
  <% end %>

<br>

<a href="/characters/new">Create a character</a>
<a href="/houses/new">Create a house</a>
<a href="/houses">View your created houses</a>
<a href="/characters">View your created characters</a>

<br>

<a href="/logout">Logout</a>

<!-- User is not logged in -->
<% else %>
  <a href="/users/new">Sign up for CharMan</a>

  <a href="/session/new">Login</a>

<% end %>

</div> <!-- wrapper -->

